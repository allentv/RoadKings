<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:fillViewport="true"
    tools:context=".WelcomePageActivity" >
    
<RelativeLayout 
	   	android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:background="@drawable/car"
	    >
	    
	<LinearLayout 
	 android:id="@+id/welcomeLayout"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
	       android:paddingTop="30dip"
    	   android:paddingBottom="15dip"	 
    	   android:background="@layout/header"> 
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customerName"
        android:text=""
        android:layout_gravity="center"
        android:textColor="#2F4F4F"
        android:textSize="22sp" />
    </LinearLayout>   
    
	<LinearLayout 
	 	   android:id="@+id/welcomeLayoutform"
	       android:orientation="vertical"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" 
	       android:layout_below="@+id/welcomeLayout"
	    >  
	

	<Button
	    android:id="@+id/historyButton"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   	android:layout_below="@+id/welcomeLayoutform"
	    android:layout_alignParentLeft="true"
	    android:layout_marginTop="52dp"
	    android:onClick="onClickWelcome"
	    android:text="Repair History" 
	    android:textColor="@android:color/white"
	    />

	<Button
	    android:id="@+id/problemButton"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/historyButton"
	    android:layout_marginTop="22dp"
	    android:onClick="onClickWelcome"
	    android:text="Report Problem" 
	    android:textColor="@android:color/white"/>

	<Button
	    android:id="@+id/searchButton"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/problemButton"
	    android:layout_marginTop="22dp"
	    android:onClick="onClickWelcome"
	    android:text="Search Shops" 
	    android:textColor="@android:color/white"/>
	
		<Button
	    android:id="@+id/searchGasStation"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/searchButton"
	    android:layout_marginTop="22dp"
	    android:onClick="onClickWelcome"
	    android:text="Search Gas Stations" 
	    android:textColor="@android:color/white"/>
	</LinearLayout>

    </RelativeLayout>
    

</ScrollView>
